<configuration scan="true" scanPeriod="1 seconds">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="warn">
        <appender-ref ref="STDOUT"/>
    </root>

    <logger name="globar.db" level="DEBUG"/>
    <logger name="globar.schema" level="DEBUG"/>
    <logger name="globar.rest-api" level="DEBUG"/>
    <logger name="globar.calendar.core" level="DEBUG"/>
</configuration>
